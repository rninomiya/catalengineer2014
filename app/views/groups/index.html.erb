<h1>Listing groups</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.name %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data:{ confirm:'本当に削除していいですか？'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

